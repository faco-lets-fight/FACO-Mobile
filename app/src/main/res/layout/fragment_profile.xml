<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.ProfileFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/welcome_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:text="@string/your_profile"
                android:textAppearance="@style/FacoHeaderOneTextStyle"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.appcompat.widget.Toolbar>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_pics"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/dummy_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_toolbar" />

        <TextView
            android:id="@+id/user_name_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_horizontal"
            android:text="User Name, Age"
            android:textColor="#071132"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_pics" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:gravity="center_horizontal"
            android:text="San Francisco, USA"
            android:textAppearance="@style/FacoSubtitleTextStyle"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/user_name_age"
            app:layout_constraintStart_toStartOf="@+id/user_name_age"
            app:layout_constraintTop_toBottomOf="@+id/user_name_age" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/preferences_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="true"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="15dp"
            app:contentPaddingBottom="24dp"
            app:contentPaddingTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/pref_view"
                    android:layout_width="42.34dp"
                    android:layout_height="42.34dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/ic_preferences"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/pref_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/pref_view"
                    android:text="Preference"
                    android:textAppearance="@style/FacoBodyBoldTextStyle"
                    android:textColor="@color/colorPrimaryDark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/pref_button"
                    app:layout_constraintStart_toEndOf="@+id/pref_view"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/pref_button"
                    android:layout_width="42.34dp"
                    android:layout_height="42.34dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@+id/pref_text"
                    android:background="@drawable/ic_button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/medical_history_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="true"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="15dp"
            app:contentPaddingBottom="24dp"
            app:contentPaddingTop="24dp"
            app:layout_constraintEnd_toEndOf="@+id/preferences_card"
            app:layout_constraintStart_toStartOf="@+id/preferences_card"
            app:layout_constraintTop_toBottomOf="@+id/preferences_card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/history_view"
                    android:layout_width="42.34dp"
                    android:layout_height="42.34dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/ic_med_history"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/history_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/history_view"
                    android:text="Medical History"
                    android:textAppearance="@style/FacoBodyBoldTextStyle"
                    android:textColor="@color/colorPrimaryDark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/history_button"
                    app:layout_constraintStart_toEndOf="@+id/history_view"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/history_button"
                    android:layout_width="42.34dp"
                    android:layout_height="42.34dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@+id/history_text"
                    android:background="@drawable/ic_button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/personal_info_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="true"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="15dp"
            app:contentPaddingBottom="24dp"
            app:contentPaddingTop="24dp"
            app:layout_constraintEnd_toEndOf="@+id/medical_history_card"
            app:layout_constraintStart_toStartOf="@+id/medical_history_card"
            app:layout_constraintTop_toBottomOf="@+id/medical_history_card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/info_view"
                    android:layout_width="42.34dp"
                    android:layout_height="42.34dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/ic_personal_info"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/info_view"
                    android:text="Personal Info"
                    android:textAppearance="@style/FacoBodyBoldTextStyle"
                    android:textColor="@color/colorPrimaryDark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/info_button"
                    app:layout_constraintStart_toEndOf="@+id/info_view"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/info_button"
                    android:layout_width="42.34dp"
                    android:layout_height="42.34dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@+id/info_text"
                    android:background="@drawable/ic_button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>